<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/sourceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Source Location" />

    <EditText
        android:id="@+id/destinationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sourceEditText"
        android:hint="Enter Destination Location" />

    <Button
        android:id="@+id/findRouteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Route"
        android:layout_below="@id/destinationEditText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/findRouteButton"
        android:padding="16dp"
        android:textSize="16sp" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
